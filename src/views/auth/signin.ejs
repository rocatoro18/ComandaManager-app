<%- include("../template/cabecera") %>
<%- include("../partials/navigation") %>


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Iniciar Sesión</h3>
                </div>
                <div class="card-body">
                    <img src="/img/PeccataMinutaVector.svg" alt="Logo Peccata Minuta" class="card-img-top mx-auto m-2 rounded-circle w-50">
                    <form action="/signin" id="form-signin" method="POST">
                        <div class="form-group success">
                            <input type="text" name="NOMBRE_USUARIO" placeholder="Nombre de Usuario" id="username" class="form-control" autocomplete="off" autocomplete="chrome-off">
                        </div>
                        <br>
                        <div class="form-group error">
                            <input type="password" name="PASSWORD" placeholder="Contraseña" id="password" class="form-control" autocomplete="off" autocomplete="chrome-off" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Iniciar Sesión
                            </button>
                        </div>
                    </form>

                    <% if(typeof validaciones != 'undefined') {%>
                        <% validaciones.forEach((validacion)=>{ %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong><%=validacion.msg%></strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                          </div>
                    <% })%>
                    <% }%>
                </div>
            </div>
        </div>
    </div>  
</div>
