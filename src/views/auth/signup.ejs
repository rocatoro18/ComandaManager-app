<%- include("../template/cabecera") %>
<%- include("../partials/navigation") %>

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registrarse</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <input type="text" name="NOMBRE_EMPLEADO" placeholder="Nombre" class="form-control" autocomplete="off" autocomplete="chrome-off" autofocus>
                        </div>

                        <div class="form-group">
                            <input type="text" name="APELLIDOS_EMPLEADO" placeholder="Apellidos" class="form-control" autocomplete="off" autocomplete="chrome-off">
                        </div>

                        <div class="form-group">
                            <input type="text" name="TELEFONO_EMPLEADO" placeholder="Telefono" class="form-control" autocomplete="off" autocomplete="chrome-off">
                        </div>

                        <div class="form-group">
                            <input type="text" name="CORREO_EMPLEADO" placeholder="Correo" class="form-control" autocomplete="off" autocomplete="chrome-off">
                        </div>

                        <div class="form-group">
                            <input type="text" name="NOMBRE_USUARIO" placeholder="Nombre de Usuario" class="form-control" autocomplete="off" autocomplete="chrome-off">
                        </div>

                        <div class="form-group">
                            <input type="password" name="PASSWORD" placeholder="ContraseÃ±a" class="form-control" autocomplete="off" autocomplete="chrome-off">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Registrarse
                            </button>
                        </div>
                    </form>
                    <% if(typeof validaciones != 'undefined') {%>
                        <% validaciones.forEach((validacion)=>{ %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong><%=validacion.msg%></strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                          </div>
                    <% })%>
                    <% }%>
                </div>
            </div>
        </div>
    </div>  
</div>
