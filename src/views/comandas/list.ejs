<%- include("../template/cabecera") %>
<%- include("../partials/navigation") %>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Número Mesa</th>
            <th scope="col">Número Personas</th>
            <th scope="col">Anotación Comanda</th>
            <th scope="col">Cantidad Comanda</th>
            <th scope="col">Importe Comanda</th>
            <th scope="col" class="text-end">Acciones</th>
        </tr>
    </thead>
        <tbody>
            {{#each comanda}}
                <tr>
                    <td>{{NUMERO_MESA}}</td>
                    <td>{{NUMERO_PERSONAS}}</td>
                    <td>{{ANOTACION_COMANDA}}</td>
                    <td>{{CANTIDAD_COMANDA}}$</td>
                    <td>{{IMPORTE_COMANDA}}$</td>
                    <td class="text-end">
                        <a href="/comandas/edit/{{ID_COMANDA}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Editar</a>
                        <a href="/comandas/delete/{{ID_COMANDA}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Eliminar</a>
                    </td>
                </tr>
                {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>No hay comandas registradas aún</p>
                        <a href="/comandas/add">Registra una comanda</a>
                    </div> 
                </div>
                {{/each}}
    </tbody>
</table>