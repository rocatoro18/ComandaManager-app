<%- include("../template/cabecera") %>
<%- include("../partials/navigation") %>

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/comandas/edit/{{comanda.ID_COMANDA}}" method="POST">
                        <div class="form-group">
                            <input type = "text" value = "{{comanda.NUMERO_MESA}}" class = "form-control" name = "numero_mesa" placeholder="Número Mesa" autofocus>
                        </div>
                        <div class="form-group">
                            <input type = "text" value = "{{comanda.NUMERO_PERSONAS}}" class = "form-control" name = "numero_personas" placeholder="Número Personas">
                        </div>
                        <div class="form-group">
                            <input type = "text" value = "{{comanda.ANOTACION_COMANDA}}" class= "form-control" name = "anotacion_comanda" placeholder="Anotación Comanda">
                        </div>
                        <div class="form-group">
                            <input type = "text" value = "{{comanda.CANTIDAD_COMANDA}}" class= "form-control" name = "cantidad_comanda" placeholder="Cantidad Comanda">
                        </div>
                        <div class="form-group">
                            <input type = "text" value = "{{comanda.IMPORTE_COMANDA}}" class= "form-control" name = "importe_comanda" placeholder="Importe Comanda">
                        </div>
                        <div class="form-group">
                            <button class = "btn btn-success btn-block">
                                Modificar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
