<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/productos/add" method="POST">
                        <div class="form-group col-lg-10">
                            <h3>PRODUCTOS PAN Y TORTILLA</h3>
                            <select class="show-tick form-control noBSselect">
                                <option value="">---SELECCIONAR PRODUCTO---</option>
                                <option value="" disabled="true">---PAN---</option>
                                <option value="" name="nombre_producto_pt">PAN CIABATA</option>
                                <option value="" name="nombre_producto_pt">PAN BAGUETE</option>
                                <option value="" name="nombre_producto_pt">PAN HAMBURGUESA</option>
                                <option value="" disabled="true">---TORTILLA---</option>
