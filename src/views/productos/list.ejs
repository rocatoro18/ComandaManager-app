<%- include("../template/cabecera") %>
<%- include("../partials/navigation") %>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre Producto</th>
            <th scope="col">Categoria Producto</th>
            <th scope="col">Cantidad Producto</th>
            <th scope="col">Unidad Medida Producto</th>
            <th scope="col" class="text-end">Acciones</th>
        </tr>
    </thead>
        <tbody>
                <% if (productos.length != 0) {%> 
                <% for(let producto = 0; producto < productos.length; producto++) {%> 
                <tr>
                    <td><%= productos[producto].NOMBRE_PRODUCTO %></td>
                    <td><%= productos[producto].CATEGORIA_PRODUCTO %></td>
                    <td><%= productos[producto].CANTIDAD_PRODUCTO %></td>
                    <td><%= productos[producto].UNIDAD_MEDIDA_PRODUCTO %></td>
                    <td class="text-end">
                        <a href="/productos/edit/<%=productos[producto].ID_PRODUCTO%>" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Editar</a>
                        <a href="/productos/delete/<%=productos[producto].ID_PRODUCTO%>" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Eliminar</a>
                    </td>
                </tr>
                <% } %> 
                <% } else {%>
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>No hay productos registrados a√∫n</p>
                        <a href="/productos/add">Registra un producto</a>
                    </div> 
                </div>
                <% } %> 
    </tbody>
</table>



