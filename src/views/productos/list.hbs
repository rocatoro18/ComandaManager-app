<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre Producto</th>
            <th scope="col">Categoria Producto</th>
            <th scope="col">Cantidad Producto</th>
            <th scope="col">Unidad Medida Producto</th>
            <th scope="col" class="text-end">Acciones</th>
        </tr>
    </thead>
        <tbody>
            {{#each productos}}
                <tr>
                    <td>{{NOMBRE_PRODUCTO}}</td>
                    <td>{{CATEGORIA_PRODUCTO}}</td>
                    <td>{{CANTIDAD_PRODUCTO}}</td>
                    <td>{{UNIDAD_MEDIDA_PRODUCTO}}</td>
                    <td class="text-end">
                        <a href="/productos/edit/{{ID_PRODUCTO}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Editar</a>
                        <a href="/productos/delete/{{ID_PRODUCTO}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Eliminar</a>
                    </td>
                </tr>
                {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>No hay productos registrados a√∫n</p>
                        <a href="/productos/add">Registra un producto</a>
                    </div> 
                </div>
                {{/each}}
    </tbody>
</table>



