<%- include("../template/cabecera") %>
<%- include("../partials/navigation") %>

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/productos/edit/<%=producto.ID_PRODUCTO%>" method="POST">
                        <div class="form-group">
                            <input type = "text" value = "<%=producto.NOMBRE_PRODUCTO%>" class = "form-control" name = "nombre_producto" placeholder="Nombre Producto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type = "text" value = "<%=producto.CATEGORIA_PRODUCTO%>" class = "form-control" name = "categoria_producto" placeholder="Categoria Producto">
                        </div>
                        <div class="form-group">
                            <input type = "text" value = "<%=producto.CANTIDAD_PRODUCTO%>" class= "form-control" name = "cantidad_producto" placeholder="Cantidad Producto">
                        </div>
                        <div class="form-group">
                            <input type = "text" value = "<%=producto.UNIDAD_MEDIDA_PRODUCTO%>" class= "form-control" name = "unidad_medida_producto" placeholder="Unidad Medida Producto">
                        </div>
                        <div class="form-group">
                            <button class = "btn btn-success btn-block">
                                Modificar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
